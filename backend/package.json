{
  "name": "acts-law-rag-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend para sistema RAG de ACTS Law con control de acceso y sincronización automática de permisos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "sync-notes": "node sync-notes.js",
    "sync-permissions": "node sync-permissions.js",
    "sync-all": "npm run sync-permissions && npm run sync-notes",
